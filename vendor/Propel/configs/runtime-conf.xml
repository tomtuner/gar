<?xml version="1.0" encoding="utf-8"?>
<config>
 <!-- 
  <log>
    <ident>propel-bookstore</ident>
    <type>console</type>
    <level>7</level>
  </log> 
  -->
    <propel>
        <datasources default="orm">
            <datasource id="orm">
                <adapter>mysql</adapter>
                <connection>
                    <dsn>mysql:host=localhost;port=3306;dbname=art_request</dsn>
                    <user>root</user>
                    <password></password>
                    <classname>DebugPDO</classname>
                    <attributes>
                        <option id="MYSQL_ATTR_USE_BUFFERED_QUERY">true</option>
                    </attributes>
                    <settings>
                        <setting id="queries">
                            <query>SET NAMES utf8</query><!-- automatically set UTF8 encoding -->
                        </setting>
                    </settings>
                </connection>
            </datasource>
        </datasources>
    </propel>
</config>